        require(msg.sender == rootUpdater, "FITsReward: Not authorized, Only root updater");
        _;
    }

    // @dev Set the Merkle root by the owner through automated backend
    function updateMerkleRoot(bytes32 _merkleRoot) external onlyRootUpdater {
        merkleRoot = _merkleRoot;
        lastRootUpdatedTime = block.timestamp;
        emit MerkleRootUpdated(true);
    }

    // @dev Change the root updater address (only callable by owner)
    function setRootUpdater(address _rootUpdater) external onlyOwner {
        address _previousRootUpdater = rootUpdater;
        rootUpdater = _rootUpdater;
        emit RootUpdaterChanged(_previousRootUpdater, _rootUpdater);
    }

    /// @dev Change the claim cool down
    function setClaimCoolDown(uint256 _timeInSeconds) external onlyOwner {
        uint256 _oldTime = claimCoolDown;
        claimCoolDown = _timeInSeconds;
        emit ClaimCoolDownChanged(_oldTime, _timeInSeconds);
    }

    /// @dev Change reward fee percentage
    function setFeePercentage(uint256 _fee) external onlyOwner {
        require(_fee <= 100, "FITsReward: Fee can not be more then 100");
        uint256 _oldFee = feePercentage;
        feePercentage = _fee;
        emit FeeChange(_oldFee, _fee);
    }

    // @dev Update fee wallet address by the owner
    function setFeeWallet(address _feeWallet) external onlyOwner {
        feeWallet = _feeWallet;
        emit FeeWalletUpdated(_feeWallet);
    }

    // @dev Set the max reward amount per day for each user for securing any configuration bug only set by owner
    function setMaxRewardAmount(uint256 _maxRewardAmount) external onlyOwner {
        maxRewardAmount = _maxRewardAmount;
        emit MaxRewardAmountUpdated(_maxRewardAmount);
    }

    // Pause and unpause claiming functions 
    function pauseClaiming() external onlyOwner {
        require(claimingPaused == false, "FITsReward: Claiming is already paused");
        claimingPaused = true;
    }

    function unpauseClaiming() external onlyOwner {
        require(claimingPaused == true, "FITsReward: Claiming is already unpaused");
        claimingPaused = false;
    }

    // @dev Claim reward with Merkle proof verification and daily cap enforcement
    function claimReward(uint256 rewardAmount, bytes32[] calldata proof) external nonReentrant {
        require(!claimingPaused, "FITsReward: Claiming is paused");
        require(block.timestamp >= lastClaimed[msg.sender] + claimCoolDown, "FITsReward: Claim cooldown, Wait 24 hours");
        require(block.timestamp <= lastRootUpdatedTime + 1 days, "FITsReward: Internal Error, Please try again later");

        bytes32 leaf = keccak256(abi.encodePacked(msg.sender, rewardAmount));
        require(MerkleProof.verify(proof, merkleRoot, leaf), "FITsReward: Invalid Merkle proof");

        rewardAmount = rewardAmount > maxRewardAmount ? maxRewardAmount : rewardAmount;

        uint256 fee = (rewardAmount * feePercentage) / 100;
        uint256 netReward = rewardAmount - fee;

        lastClaimed[msg.sender] = block.timestamp;
        totalRewardsClaimed[msg.sender] += netReward;

        FITsToken.mint(msg.sender, netReward);
        FITsToken.mint(feeWallet, fee);

        emit RewardClaimed(msg.sender, netReward, fee);
    }
}